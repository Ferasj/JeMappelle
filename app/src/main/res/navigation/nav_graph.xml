<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/namesListFragment">

    <fragment
        android:id="@+id/addNewNameFragment"
        android:name="com.feras.Asami.fragments.AddNewNameFragment"
        android:label="fragment_add_new_name"
        tools:layout="@layout/fragment_add_new_name" >
        <action
            android:id="@+id/action_addNewNameFragment_to_namesListFragment"
            app:destination="@id/namesListFragment"
            app:popUpTo="@id/namesListFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nameDetailsFragment"
        android:name="com.feras.Asami.fragments.NameDetailsFragment"
        android:label="fragment_name_details"
        tools:layout="@layout/fragment_name_details" >
        <action
            android:id="@+id/action_nameDetailsFragment_to_namesListFragment"
            app:destination="@id/namesListFragment"
            app:popUpTo="@id/namesListFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="nameId"
            app:argType="long" />
        <action
            android:id="@+id/action_nameDetailsFragment_to_allNamesWithTagFragment"
            app:destination="@id/allNamesWithTagFragment" />
        <action
            android:id="@+id/action_nameDetailsFragment_to_nameEditFragment"
            app:destination="@id/nameEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/tagsListFragment"
        android:name="com.feras.Asami.fragments.TagsListFragment"
        android:label="fragment_tags_list"
        tools:layout="@layout/fragment_tags_list" >
        <action
            android:id="@+id/action_tagsListFragment_to_allNamesWithTagFragment"
            app:destination="@id/allNamesWithTagFragment" />
    </fragment>
    <fragment
        android:id="@+id/allNamesWithTagFragment"
        android:name="com.feras.Asami.fragments.AllNamesWithTagFragment"
        android:label="fragment_all_names_with_tag"
        tools:layout="@layout/fragment_all_names_with_tag" >
        <argument
            android:name="tagId"
            app:argType="long" />
        <action
            android:id="@+id/action_allNamesWithTagFragment_to_tagsListFragment"
            app:destination="@id/tagsListFragment"
            app:popUpTo="@id/tagsListFragment" />
        <action
            android:id="@+id/action_allNamesWithTagFragment_to_nameDetailsFragment"
            app:destination="@id/nameDetailsFragment" />
        <action
            android:id="@+id/action_allNamesWithTagFragment_to_tagEditFragment"
            app:destination="@id/tagEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/namesListFragment"
        android:name="com.feras.Asami.fragments.NamesListFragment"
        android:label="fragment_names_list"
        tools:layout="@layout/fragment_names_list" >
        <action
            android:id="@+id/action_namesListFragment_to_addNewNameFragment"
            app:destination="@id/addNewNameFragment" />
        <action
            android:id="@+id/action_namesListFragment_to_nameDetailsFragment"
            app:destination="@id/nameDetailsFragment" />
        <action
            android:id="@+id/action_namesListFragment_to_allNamesWithTagFragment"
            app:destination="@id/allNamesWithTagFragment" />
    </fragment>
    <fragment
        android:id="@+id/nameEditFragment"
        android:name="com.feras.Asami.fragments.NameEditFragment"
        android:label="fragment_name_edit"
        tools:layout="@layout/fragment_name_edit" >
        <action
            android:id="@+id/action_nameEditFragment_to_nameDetailsFragment"
            app:destination="@id/nameDetailsFragment"
            app:popUpTo="@id/nameDetailsFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="nameId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/tagEditFragment"
        android:name="com.feras.Asami.fragments.TagEditFragment"
        android:label="fragment_tag_edit"
        tools:layout="@layout/fragment_tag_edit" >
        <action
            android:id="@+id/action_tagEditFragment_to_allNamesWithTagFragment"
            app:destination="@id/allNamesWithTagFragment"
            app:popUpTo="@id/allNamesWithTagFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="tagId"
            app:argType="long" />
    </fragment>
</navigation>